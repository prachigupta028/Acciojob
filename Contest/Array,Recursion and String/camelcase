import java.io.*;
import java.util.*;
public class Main {
    public static void main(String args[]) {
        // your code here
      Scanner sc=new Scanner(System.in);
      String s=sc.next();
       int n=s.length()-1;
      int count=1;
      for(int i=1;i<=n;i++){
        if(s.charAt(i)>=65 && s.charAt(i)<90){
          count++;
        }
       
      }
       System.out.print(count);
    }
}
